{
  "id": "edu.mit.eliza",
  "version": "0.0.7",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Eliza"
  },
  "author": {
    "name": "Geurt Dijker",
    "email": "geurt@dijker.nu"
  },
  "contributors": {
    "developers": [
      { "name": "Joseph Weizenbaum",
        "email": "noreply1@nonexistentdomain.tld" },
      { "name": "Nate Lewis",
        "email": "noreply2@nonexistentdomain.tld" }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "Dijker"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/Dijker/com.athom.eliza/issues"
  },
  "athomForumDiscussionId": 5412,
  "description": {
    "en": "Eliza is a mock Rogerian psychotherapist. Original program by Joseph Weizenbaum."
  },
  "category": [
    "tools"
  ],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "speech": {
    "en": {
        "element": {
          "debug": {
              "type": "regex",
              "value": "debug is true"
          },
          "actionWords": {
              "type": "regex",
              "value": "speak (with|to)|talk (with|to)"
          },
          "Eliza": {
              "type": "regex",
              "value": "eliza|elisa|Eliza|Elisa|clinician|doctor|psychoanalyst|psychologist|psychotherapist|therapist"
          },
          "mood": {
              "type": "regex",
              "value": "feel|think|believe|wish|cannot|can't|desire|want|need|unhappy|depressed|sick|worry|angry|happy|sad|everyone|everybody|nobody|noone|elated|glad|better|worries|unhappy|computers|machines|sad|negative|problem|apologise|forget|dream|dreamed"
          }
        },
        "group": {
            "main": {
                "set": "(actionWords) && Eliza && (debug)",
                "ordered": false,
                "allowDisconnect": true,
                "capturingGroup": true
            },
            "fuzzy": {
                "set": "mood",
                "ordered": false,
                "allowDisconnect": true,
                "capturingGroup": true
            }

        }
    }
  },
  "speechExamples": {
      "en": ["Can I speak Eliza?"]
  },
  "permissions": [
    "homey:manager:speech-input",
    "homey:manager:speech-output"
  ]
}
